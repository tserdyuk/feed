{
  "version": "2.0",
  "init": "clean -> babel:js -> packager",
  "start": "babel:js -> watch:js, install",
  "emulator": ["emulator -avd Test"],
  "packager": ["cd native; npm run start"],
  "install": ["cd native; react-native run-android"],
  ":js": {
    "task": "babel:js",
    "plumber": true,
    "src": ["src/**/*.js", "config/**/*.js"],
    "dest": "native/target"
  },
  "clean": {
    "dest": "native/target"
  }
}
